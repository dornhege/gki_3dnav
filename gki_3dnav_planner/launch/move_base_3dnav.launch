<launch>
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="xterm -e gdb --args" />

<node ns="local_costmap" name="voxel_grid_throttle" pkg="topic_tools" type="throttle" args="messages voxel_grid 3.0 voxel_grid_throttled" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen" required="true" launch-prefix="$(arg launch_prefix)">
    <param name="footprint_padding" value="0.01" />
    <param name="controller_frequency" value="10.0" />
    <param name="controller_patience" value="100.0" />
    <param name="base_global_planner" value="flourish_planner/FlourishPlanner" />
    <param name="FlourishPlanner/primitive_filename" value="$(find gki_3dnav_planner)/config/bonirob_0.15_16_plussideways.mprim" />
    <param name="FlourishPlanner/traversability_map" value="$(find gki_3dnav_planner)/config/traversableMap.ppm" />
    <param name="FlourishPlanner/freespace_heuristic_costmap" value="$(find gki_3dnav_planner)/config/bonirob_0.15_16_plussideways.mprim_costmap.dat" />
	<!-- <param name="FlourishPlanner/primitive_filename" value="$(find gki_3dnav_planner)/config/pr2_sbpl.mprim" /> -->
    <!-- param name="FlourishPlanner/primitive_filename" value="$(find gki_3dnav_planner)/config/pr2_base.mprim" -->
    <!--param name="FlourishPlanner/primitive_filename" value="$(find gki_3dnav_planner)/config/pr2_5cm_plussideways.mprim" /-->

    <rosparam file="$(find gki_3dnav_planner)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find gki_3dnav_planner)/config/local_costmap_params_close.yaml" command="load" />
    <rosparam file="$(find gki_3dnav_planner)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find gki_3dnav_planner)/config/sbpl_global_params.yaml" command="load" />
    <rosparam file="$(find gki_3dnav_planner)/config/base_local_planner_params_close.yaml" command="load" />

    <rosparam file="$(find gki_3dnav_planner)/config/sbpl_local_params.yaml" command="load" />
    <rosparam file="$(find gki_3dnav_planner)/config/base_local_planner_poses.yaml" command="load" />

    <remap from="cmd_vel" to="base_controller/command"/>
  </node>
</launch>
